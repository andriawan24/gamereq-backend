{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "sort-imports": 
        [
            "error", 
            { 
                "ignoreCase": true, 
                "ignoreDeclarationSort": true 
            }
        ],
        "no-underscore-dangle": "off"
    }
}
